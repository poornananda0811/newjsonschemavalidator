{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Order Schema",
  "type": "object",
  "required": ["orderId", "customer", "items", "payment", "orderStatus"],
  "properties": {
    "orderId": { "type": "string" },
    "customer": { "$ref": "#/definitions/customer" },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/orderItem" }
    },
    "payment": { "$ref": "#/definitions/payment" },
    "orderStatus": {
      "type": "string",
      "enum": ["PROCESSING", "COMPLETED", "CANCELLED"]
    }
  },

  "definitions": {
    "address": {
      "type": "object",
      "required": ["street", "city", "zipCode", "country"],
      "properties": {
        "street": { "type": "string" },
        "city": { "type": "string" },
        "zipCode": { "type": "string" },
        "country": { "type": "string" }
      }
    },

    "product": {
      "type": "object",
      "required": ["productId", "name", "price"],
      "properties": {
        "productId": { "type": "string" },
        "name": { "type": "string" },
        "price": { "type": "number", "minimum": 0 }
      }
    },

    "customer": {
      "type": "object",
      "required": ["customerId", "name", "email", "billingAddress", "shippingAddress"],
      "properties": {
        "customerId": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "billingAddress": { "$ref": "#/definitions/address" },
        "shippingAddress": { "$ref": "#/definitions/address" }
      }
    },

    "orderItem": {
      "type": "object",
      "required": ["itemId", "product", "quantity", "totalPrice", "shippingAddress"],
      "properties": {
        "itemId": { "type": "string" },
        "product": { "$ref": "#/definitions/product" },
        "quantity": { "type": "integer", "minimum": 1 },
        "totalPrice": { "type": "number", "minimum": 0 },
        "shippingAddress": { "$ref": "#/definitions/address" }
      }
    },

    "payment": {
      "type": "object",
      "required": ["method", "currency", "amountPaid"],
      "properties": {
        "method": { "type": "string" },
        "currency": { "type": "string" },
        "amountPaid": { "type": "number", "minimum": 0 }
      }
    }
  }
}